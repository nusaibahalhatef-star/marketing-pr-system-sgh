# متغيرات البيئة - نظام إدارة التسويق والعلاقات العامة

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sgh_marketing_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# MongoDB Database
MONGO_URI=mongodb://localhost:27017/sgh_marketing_db
MONGO_DB_NAME=sgh_marketing_db

# CORS Settings
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT Settings
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# File Upload Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Email Settings (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@sgh.sa

# SMS Settings (for notifications)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.com/send

# External API Keys
GOOGLE_ANALYTICS_API_KEY=your-google-analytics-api-key
FACEBOOK_API_KEY=your-facebook-api-key
INSTAGRAM_API_KEY=your-instagram-api-key
TWITTER_API_KEY=your-twitter-api-key

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
